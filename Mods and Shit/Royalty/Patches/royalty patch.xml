<?xml version="1.0" encoding="utf-8" ?>
<Patch>   

                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[defName="MeditationSpot"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Zone</designationCategory>
                    </value>
                </Operation>

                <Operation Class="PatchOperationConditional">
                <success>Always</success>
                    <xpath>/Defs/ThingDef[defName="MeditationSpot"]/uiOrder</xpath>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationReplace">
                                <xpath>/Defs/ThingDef[defName="MeditationSpot"]/uiOrder</xpath>
                                <value>
                                    <uiOrder>99999</uiOrder>
                                </value>
                            </li>
                        </operations>
                    </match>
                    <nomatch Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationAdd">
                                <xpath>/Defs/ThingDef[defName="MeditationSpot"]</xpath>
                                <value>
                                    <uiOrder>99999</uiOrder>
                                </value>
                            </li>
                        </operations>
                    </nomatch>
                </Operation>

</Patch>